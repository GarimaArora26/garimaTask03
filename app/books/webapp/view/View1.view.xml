        <mvc:View controllerName="books.books.controller.View1"
xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" 	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <Table
                id="booksTable"
                items="{
                    path: '/Books',
                    parameters: {
                        $$updateGroupId: 'booksGroup'
                    }
                }"
                 mode="SingleSelectMaster">
                <headerToolbar>
                    <Toolbar>
                        <Title text="Books"/>
                        <ToolbarSpacer />
                        <Button icon="sap-icon://add" press=".onOpenAddDialog" tooltip="Add Book"/>
                        <Button icon="sap-icon://edit" press=".onOpenEditDialog" tooltip="Edit Book" enabled="{= ${booksTable>/selectedIndex} >= 0}"/>
                        <Button icon="sap-icon://delete" press=".onDeleteBook" tooltip="Delete Book" enabled="{= ${booksTable>/selectedIndex} >= 0}"/>
                        <Button icon="sap-icon://refresh" press=".onRefresh" tooltip="Refresh Books List"/>
                    </Toolbar>
                </headerToolbar>
                <columns>
                   <Column>
    <Text text="ID" tooltip="Book ID"/>
</Column>
<Column>
    <Text text="Title" tooltip="Book Title"/>
</Column>
<Column>
    <Text text="Stock" tooltip="Available Stock"/>
</Column>
<Column>
                        <Text text="Price" tooltip="Book Price"/>
                    </Column>
                    <Column>
                        <Text text="Total Value" tooltip="Stock * Price"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{ID}" />
                            <Text text="{title}" />
                            <Text text="{stock}" />
                            <Text text="{
                                path: 'price',
                                type: 'sap.ui.model.type.Currency',
                                formatOptions: {
                                    showMeasure: false
                                }
                            }" />
                            <Text text="{
                                parts: ['stock', 'price'],
                                formatter: '.formatter.calculateTotalValue'
                            }" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <Text text="Grand Total: {viewModel>/grandTotal}" />
        </content>
    </Page>
</mvc:View>
